<body>
    <div class="container">
        <div class="password-tester">
            <h1>üîê Password Strength Tester</h1>
            
            <div class="input-group">
                <input type="password" id="passwordInput" placeholder="Enter your password..." autocomplete="off">
                <button id="toggleVisibility">üëÅÔ∏è</button>
            </div>
            
            <div class="strength-meter">
                <div class="strength-bar">
                    <div class="strength-fill" id="strengthFill"></div>
                </div>
                <span class="strength-text" id="strengthText">Enter a password</span>
            </div>
            
            <div class="requirements">
                <h3>Password Requirements:</h3>
                <ul>
                    <li id="req-length">üìè At least 12 characters</li>
                    <li id="req-upper">üî† Uppercase letter</li>
                    <li id="req-lower">üî° Lowercase letter</li>
                    <li id="req-number">üî¢ Number</li>
                    <li id="req-special">‚ö° Special character</li>
                    <li id="req-common">üö´ No common patterns</li>
                </ul>
            </div>
            
            <div class="suggestions">
                <h3>üí° Strong Password Examples:</h3>
                <div class="example-passwords">
                    <code>Summer@Beach#2024!</code>
                    <code>BlueDragon$Flies^High42</code>
                    <code>M0unT@in#V!ew2024</code>
                </div>
            </div>
            
            <button id="generatePassword" class="generate-btn">üé≤ Generate Strong Password</button>
        </div>
        
  
    </div>
    
    <script>
        class PasswordStrengthTester {
            constructor() {
                this.passwordInput = document.getElementById('passwordInput');
                this.toggleVisibility = document.getElementById('toggleVisibility');
                this.strengthFill = document.getElementById('strengthFill');
                this.strengthText = document.getElementById('strengthText');
                this.generateBtn = document.getElementById('generatePassword');
                
                this.initializeEventListeners();
            }
            
            initializeEventListeners() {
                this.passwordInput.addEventListener('input', () => this.checkStrength());
                this.toggleVisibility.addEventListener('click', () => this.togglePasswordVisibility());
                this.generateBtn.addEventListener('click', () => this.generateStrongPassword());
                
                // Add click events to example passwords
                document.querySelectorAll('.example-passwords code').forEach(element => {
                    element.addEventListener('click', () => {
                        this.passwordInput.value = element.textContent;
                        this.checkStrength();
                    });
                });
            }
            
            checkStrength() {
                const password = this.passwordInput.value;
                let score = 0;
                const feedback = {
                    length: false,
                    upper: false,
                    lower: false,
                    number: false,
                    special: false,
                    common: true
                };
                
                // Length check (12+ characters)
                if (password.length >= 12) {
                    score += 2;
                    feedback.length = true;
                } else if (password.length >= 8) {
                    score += 1;
                }
                
                // Upper and lower case
                if (/[A-Z]/.test(password) && /[a-z]/.test(password)) {
                    score += 1;
                    feedback.upper = true;
                    feedback.lower = true;
                }
                
                // Numbers
                if (/\d/.test(password)) {
                    score += 1;
                    feedback.number = true;
                }
                
                // Special characters
                if (/[!@#$%^&*(),.?":{}|<>]/.test(password)) {
                    score += 1;
                    feedback.special = true;
                }
                
                // Common patterns check (negative scoring)
                const weakPatterns = [
                    '123', 'abc', 'qwerty', 'password', 'admin', 'welcome',
                    'letmein', 'monkey', '123456', '12345678', '123456789'
                ];
                
                const hasCommonPattern = weakPatterns.some(pattern => 
                    password.toLowerCase().includes(pattern)
                );
                
                if (hasCommonPattern) {
                    score = Math.max(0, score - 1);
                    feedback.common = false;
                } else {
                    feedback.common = true;
                }
                
                // Update UI
                this.updateStrengthMeter(score);
                this.updateRequirements(feedback);
                this.updateStrengthText(score, password.length);
            }
            
            updateStrengthMeter(score) {
                // Remove all existing classes
                this.strengthFill.className = 'strength-fill';
                
                // Add appropriate strength class
                this.strengthFill.classList.add(`strength-${score}`);
            }
            
            updateRequirements(feedback) {
                const requirements = {
                    'length': 'req-length',
                    'upper': 'req-upper',
                    'lower': 'req-lower',
                    'number': 'req-number',
                    'special': 'req-special',
                    'common': 'req-common'
                };
                
                for (const [key, elementId] of Object.entries(requirements)) {
                    const element = document.getElementById(elementId);
                    if (feedback[key]) {
                        element.classList.add('valid');
                        element.classList.remove('invalid');
                    } else {
                        element.classList.add('invalid');
                        element.classList.remove('valid');
                    }
                }
            }
            
            updateStrengthText(score, length) {
                const messages = [
                    '‚ùå Very Weak',
                    '‚ùå Weak',
                    '‚ö†Ô∏è Fair',
                    'üëç Good',
                    'üí™ Strong',
                    'üîí Very Strong'
                ];
                
                const message = messages[Math.min(score, messages.length - 1)];
                this.strengthText.textContent = `${message} (${length} characters)`;
                this.strengthText.className = `strength-text strength-text-${score}`;
            }
            
            togglePasswordVisibility() {
                const type = this.passwordInput.type === 'password' ? 'text' : 'password';
                this.passwordInput.type = type;
                this.toggleVisibility.textContent = type === 'password' ? 'üëÅÔ∏è' : 'üôà';
            }
            
            generateStrongPassword() {
                const chars = {
                    lower: 'abcdefghijklmnopqrstuvwxyz',
                    upper: 'ABCDEFGHIJKLMNOPQRSTUVWXYZ',
                    numbers: '0123456789',
                    symbols: '!@#$%^&*(),.?":{}|<>'
                };
                
                let password = '';
                
                // Ensure at least one of each type
                password += this.getRandomChar(chars.lower);
                password += this.getRandomChar(chars.upper);
                password += this.getRandomChar(chars.numbers);
                password += this.getRandomChar(chars.symbols);
                
                // Fill remaining characters randomly
                const allChars = chars.lower + chars.upper + chars.numbers + chars.symbols;
                for (let i = password.length; i < 16; i++) {
                    password += this.getRandomChar(allChars);
                }
                
                // Shuffle the password
                password = this.shuffleString(password);
                
                // Set the generated password
                this.passwordInput.value = password;
                this.passwordInput.type = 'text';
                this.toggleVisibility.textContent = 'üôà';
                this.checkStrength();
            }
            
            getRandomChar(charSet) {
                return charSet[Math.floor(Math.random() * charSet.length)];
            }
            
            shuffleString(string) {
                const array = string.split('');
                for (let i = array.length - 1; i > 0; i--) {
                    const j = Math.floor(Math.random() * (i + 1));
                    [array[i], array[j]] = [array[j], array[i]];
                }
                return array.join('');
            }
        }

        // Initialize the password strength tester when the page loads
        document.addEventListener('DOMContentLoaded', () => {
            new PasswordStrengthTester();
        });
    </script>
</body>
</html>
